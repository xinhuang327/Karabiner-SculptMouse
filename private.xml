<!--
Microsoft Sculpt Comfort Mouse Binding for OSX (using Karabiner)
modified by adrianhuang, midnightsalesman, original by user inceax


-->
<?xml version="1.0"?>
    <root>
  <appdef>
    <appname>INTELLIJ</appname>
    <equal>com.jetbrains.intellij</equal>
  </appdef>
  <appdef>
    <appname>CHROME</appname>
    <equal>com.google.Chrome</equal>
  </appdef>
  <appdef>
    <appname>XCODE</appname>
    <equal>com.apple.dt.Xcode</equal>
  </appdef>
        <devicevendordef>
            <vendorname>MICROSOFT</vendorname>
            <vendorid>0x045e</vendorid>
        </devicevendordef>
        <deviceproductdef>
            <productname>SCULPT_COMFORT</productname>
            <productid>0x07a2</productid>
        </deviceproductdef>
        <item>
            <name>Slide Up to Backward (Microsoft Sculpt Comfort Mouse)</name>
            <identifier>com.microsoft.mouse.sculpt_comfort.slide_up</identifier>
            <device_only>DeviceVendor::MICROSOFT,DeviceProduct::SCULPT_COMFORT</device_only>
            <autogen>
                __KeyToKey__
       KeyCode::DELETE, ModifierFlag::CONTROL_L,
       KeyCode::CURSOR_RIGHT, ModifierFlag::CONTROL_L
     </autogen>
        </item>
        <item>
            <name>Slide Down to Forward (Microsoft Sculpt Comfort Mouse)</name>
            <identifier>com.microsoft.mouse.sculpt_comfort.slide_down</identifier>
            <device_only>DeviceVendor::MICROSOFT,DeviceProduct::SCULPT_COMFORT</device_only>
            <autogen>
                __KeyToKey__
       KeyCode::TAB, ModifierFlag::CONTROL_L,
       KeyCode::CURSOR_LEFT, ModifierFlag::CONTROL_L
     </autogen>
        </item>
        <item>
            <name>NEW Slide Up to Backward (Microsoft Sculpt Comfort Mouse)</name>
            <identifier>com.microsoft.mouse.sculpt_comfort.slide_up_new</identifier>
            <device_only>DeviceVendor::MICROSOFT,DeviceProduct::SCULPT_COMFORT</device_only>
            <autogen>
                __KeyToKey__
       PointingButton::BUTTON5,
       KeyCode::CURSOR_RIGHT, ModifierFlag::CONTROL_L
     </autogen>
        </item>
        <item>
            <name>NEW Slide Down to Forward (Microsoft Sculpt Comfort Mouse)</name>
            <identifier>com.microsoft.mouse.sculpt_comfort.slide_down_new</identifier>
            <device_only>DeviceVendor::MICROSOFT,DeviceProduct::SCULPT_COMFORT</device_only>
            <autogen>
                __KeyToKey__
       PointingButton::BUTTON4,
       KeyCode::CURSOR_LEFT, ModifierFlag::CONTROL_L
     </autogen>
        </item>
        <item>
            <name>Windows Button to LaunchPad (Microsoft Sculpt Comfort Mouse)</name>
            <identifier>com.microsoft.mouse.sculpt_comfort.win_button</identifier>
            <device_only>DeviceVendor::MICROSOFT,DeviceProduct::SCULPT_COMFORT</device_only>
            <autogen>
                __KeyToKey__
       KeyCode::COMMAND_L, ModifierFlag::CONTROL_L, 
        KeyCode::VK_NONE
         </autogen>
            <autogen>
                __KeyToKey__
       KeyCode::COMMAND_L, 
        KeyCode::MISSION_CONTROL
         </autogen>
        </item>
        <item>
            <name>Scroll Left to Backward (Microsoft Sculpt Comfort Mouse)</name>
            <identifier>com.microsoft.mouse.sculpt_comfort.scroll_left</identifier>
            <device_only>DeviceVendor::MICROSOFT,DeviceProduct::SCULPT_COMFORT</device_only>
            <autogen>
                __ScrollWheelToKey__
       ScrollWheel::LEFT,
       KeyCode::BRACKET_LEFT, ModifierFlag::COMMAND_L
     </autogen>
        </item>
        <item>
            <name>Scroll Right to Forward (Microsoft Sculpt Comfort Mouse)</name>
            <identifier>com.microsoft.mouse.sculpt_comfort.scroll_right</identifier>
            <device_only>DeviceVendor::MICROSOFT,DeviceProduct::SCULPT_COMFORT</device_only>
            <autogen>
                __ScrollWheelToKey__
       ScrollWheel::RIGHT,
       KeyCode::BRACKET_RIGHT, ModifierFlag::COMMAND_L
     </autogen>
        </item>


        <item>
            <name>Scroll Left to Backward in Intellij IDEA (Microsoft Sculpt Comfort Mouse)</name>
            <identifier>com.microsoft.mouse.sculpt_comfort.scroll_left.intellij</identifier>
            <device_only>DeviceVendor::MICROSOFT,DeviceProduct::SCULPT_COMFORT</device_only>
            <only>INTELLIJ,CHROME</only>
            <autogen>
                __ScrollWheelToKey__
       ScrollWheel::LEFT,
       KeyCode::BRACKET_LEFT, ModifierFlag::COMMAND_L
     </autogen>
        </item>
        <item>
            <name>Scroll Right to Forward in Intellij IDEA (Microsoft Sculpt Comfort Mouse)</name>
            <identifier>com.microsoft.mouse.sculpt_comfort.scroll_right.intellij</identifier>
            <device_only>DeviceVendor::MICROSOFT,DeviceProduct::SCULPT_COMFORT</device_only>
            <only>INTELLIJ,CHROME</only>
            <autogen>
                __ScrollWheelToKey__
       ScrollWheel::RIGHT,
       KeyCode::BRACKET_RIGHT, ModifierFlag::COMMAND_L
     </autogen>
        </item>


        <item>
            <name>Middle Button in XCODE (Microsoft Sculpt Comfort Mouse)</name>
            <identifier>com.microsoft.mouse.sculpt_comfort.middle_button.xcode</identifier>
            <device_only>DeviceVendor::MICROSOFT,DeviceProduct::SCULPT_COMFORT</device_only>
            <only>XCODE</only>
            <autogen>
                __KeyToKey__
       PointingButton::MIDDLE,
       PointingButton::LEFT, ModifierFlag::COMMAND_L
     </autogen>
        </item>


        <item>
            <name>Scroll Left to Backward in XCODE (Microsoft Sculpt Comfort Mouse)</name>
            <identifier>com.microsoft.mouse.sculpt_comfort.scroll_left.xcode</identifier>
            <device_only>DeviceVendor::MICROSOFT,DeviceProduct::SCULPT_COMFORT</device_only>
            <only>XCODE</only>
            <autogen>
                __ScrollWheelToKey__
       ScrollWheel::LEFT,
       KeyCode::CURSOR_LEFT, ModifierFlag::COMMAND_L, ModifierFlag::CONTROL_L
     </autogen>
        </item>
        <item>
            <name>Scroll Right to Forward in XCODE (Microsoft Sculpt Comfort Mouse)</name>
            <identifier>com.microsoft.mouse.sculpt_comfort.scroll_right.xcode</identifier>
            <device_only>DeviceVendor::MICROSOFT,DeviceProduct::SCULPT_COMFORT</device_only>
            <only>XCODE</only>
            <autogen>
                __ScrollWheelToKey__
       ScrollWheel::RIGHT,
       KeyCode::CURSOR_RIGHT, ModifierFlag::COMMAND_L, ModifierFlag::CONTROL_L
     </autogen>
        </item>

        <item>
            <name>Scroll Left to Backward Space(Microsoft Sculpt Comfort Mouse)</name>
            <identifier>com.microsoft.mouse.sculpt_comfort.scroll_leftspace</identifier>
            <device_only>DeviceVendor::MICROSOFT,DeviceProduct::SCULPT_COMFORT</device_only>
            <autogen>
                __ScrollWheelToKey__
       ScrollWheel::LEFT,
       KeyCode::CURSOR_LEFT, ModifierFlag::CONTROL_L
     </autogen>
        </item>
        <item>
            <name>Scroll Right to Forward Space(Microsoft Sculpt Comfort Mouse)</name>
            <identifier>com.microsoft.mouse.sculpt_comfort.scroll_rightspace</identifier>
            <device_only>DeviceVendor::MICROSOFT,DeviceProduct::SCULPT_COMFORT</device_only>
            <autogen>
                __ScrollWheelToKey__
       ScrollWheel::RIGHT,
       KeyCode::CURSOR_RIGHT, ModifierFlag::CONTROL_L
     </autogen>
        </item>
        <item>
            <name>Mouse Middle Button to Mission Control(Microsoft Sculpt Comfort Mouse)</name>
            <identifier>com.microsoft.mouse.sculpt_comfort.scroll_middle</identifier>
            <device_only>DeviceVendor::MICROSOFT,DeviceProduct::SCULPT_COMFORT</device_only>
            <autogen>
                __KeyToKey__
       PointingButton::MIDDLE,
       KeyCode::MISSION_CONTROL,
     </autogen>
        </item>
    </root>
